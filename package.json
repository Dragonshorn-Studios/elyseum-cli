{
  "name": "@dragonshorn/elyseum-cli",
  "version": "0.1.0",
  "description": "A CLI tool for coverage reporting",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "prepublish": "npm run build",
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts"
  },
  "bin": {
    "elyseum-cli": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dragonshorn-Studios/elyseum-cli"
  },
  "keywords": [
    "cli",
    "coverage",
    "reporting"
  ],
  "author": "Dragonshorn Studios",
  "license": "MIT",
  "dependencies": {
    "@isomorphic-git/lightning-fs": "^4.6.0",
    "@types/node": "^22.13.5",
    "argparse": "^2.0.1",
    "chalk": "^5.4.1",
    "cli-table3": "^0.6.5",
    "diff": "^7.0.0",
    "isomorphic-git": "^1.29.0",
    "js-yaml": "^4.1.0",
    "lcov-parse": "^1.0.0",
    "minimatch": "^10.0.1",
    "ora": "^8.2.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/argparse": "^2.0.17",
    "@types/diff": "^7.0.1",
    "@types/js-yaml": "^4.0.9",
    "@types/lcov-parse": "^1.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-preserve-shebang": "^1.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
